@model MIS333K_Team11_FinalProjectV2.Models.UserModel

@using Microsoft.AspNet.Identity
@{
                /**/

                ViewBag.Title = "Account Details";
}
<h2>@ViewBag.Title.</h2>
<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4></h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>First Name:</dt>
        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt>Middle Initial:</dt>
        <dd>
            @Html.DisplayFor(model => model.MiddleInitial)
        </dd>
        <dt>Last Name:</dt>
        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt>Email:</dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>Phone:</dt>
        <dd>
            @Html.DisplayFor(model => model.PhoneNumber, "{0:###-##-####}")
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Birthday)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Birthday)
        </dd>

        <dt>Street:</dt>
        <dd>
            @Html.DisplayFor(model => model.Street)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.City):
        </dt>

        <dd>
            @Html.DisplayFor(model => model.City)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.State):
        </dt>

        <dd>
            @Html.DisplayFor(model => model.State)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ZipCode):
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ZipCode)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PopcornPoints)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PopcornPoints)
        </dd>

        <dt> @Html.ActionLink("Edit", "Edit", new { id = Model.UserModelID })</dt>
    </dl>
    <br />
    @if (Model.Role == "Customer")
    {
        <h4>Credit Cards</h4>

        @Html.DisplayFor(model => model.Cards, "Card")
        if (Model.Cards.Count() < 2)
        {
            @Html.ActionLink("Add Credit Card", "AddCard")
        }

        <h4>Order History</h4>
        <table class="table">
            <tr>
                <th>Order Number</th>
                <th>Date</th>
                <th>Credit Card</th>
                <th>Purchase Amount</th>
            </tr>
            @foreach (var item in Model.Orders)
            {
            <tr>
                <td>@item.OrderNumber</td>
                <td>@item.OrderDate.ToString("MMM dd, yyyy")</td>
                <td>@item.OrderTotal</td>
            </tr>
            }
        </table>

    }

</div>