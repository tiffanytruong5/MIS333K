@model MIS333K_Team11_FinalProjectV2.Models.Showing

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Showing</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Sponsoring Movies</label>
        <div class="col-md-10">
            @Html.DropDownList("SelectedMovies", (SelectList)ViewBag.AllMovies, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Theatre, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EnumDropDownListFor(model => model.Theatre, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Theatre, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Date:<input type="datetime-local" name="ShowDate" class="form-control" />
        <span class="text-danger"> @ViewBag.ErrorMessageTime</span>
        @Html.ValidationMessageFor(model => model.ShowDate, "", new { @class = "text-danger" })
        <br />
    </div>

    @*<div class="form-group">
            Start Time:<input type="time" name="StartTime" class="form-control" />
            <br />
        </div>*@

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

