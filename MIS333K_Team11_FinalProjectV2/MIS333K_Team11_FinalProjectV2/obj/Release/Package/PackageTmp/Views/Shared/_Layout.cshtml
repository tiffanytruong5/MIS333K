@using Microsoft.AspNet.Identity

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Team 11's Movie Theater</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/site.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#nav-content" aria-controls="nav-content" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="nav-content">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Showings", "Index", "Showings", null, new { @class = "nav-link" })
                    </li>
                    @if (User.IsInRole("Manager"))

    {
                <li class="nav-item">
                    @Html.ActionLink("Movies", "Index", "Movies", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Genres", "Index", "Genres", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Manage Roles", "Index", "RoleAdmin", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Employee List", "Employees", "Accounts", null, new { @class = "nav-link" })
                </li>
}

                    @if (User.IsInRole("Customer") || User.IsInRole("DisabledCustomer"))
    {
                <li class="nav-item">
                    @Html.ActionLink("Orders", "Index", "Orders", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Create Reviews", "Index", "Reviews", null, new { @class = "nav-link" })
                </li>
}

                    @if (User.IsInRole("Manager") || User.IsInRole("Employee"))
    {
                <li class="nav-item">@Html.ActionLink("Customer List", "Customers", "Accounts", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Reviews", "Index", "Reviews", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Orders", "Index", "Orders", null, new { @class = "nav-link" })</li>
}
                </ul>
            </div>
            @Html.Partial("_LoginPartial")
        </nav>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Team 11 Spring 2018</p>
        </footer>
    </div>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>