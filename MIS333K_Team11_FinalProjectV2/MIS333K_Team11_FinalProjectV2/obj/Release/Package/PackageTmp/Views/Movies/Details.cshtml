    </tr>
    @foreach (var item in Model.Reviews)
    {

        <tr>
            <td>@item.AppUser.UserName</td>
            <td>@item.Comment</td>
            <td>@((int)item.StarRating)</td>
            @if (User.Identity.GetUserId() == item.AppUser.Id || User.IsInRole("Manager") || User.IsInRole("Employee"))
